@{
    Layout = "";
}
<style type="text/css">
    /* Custom remove icon button for each item in the shopping-cart */
    .ima9ines-ico {
        cursor: pointer;
        display: inline-block;
        height: 32px;
        width: 32px;
    }
    .ima9ines-ico.ima9ines-ico-delete {
        background-image: url(data:image/png;base64,);
        background-position: center;
        background-repeat: no-repeat;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('<span />', {
            addClass: 'ima9ines-ico ima9ines-ico-delete'
        }).attr('onclick', 'shoppingcart_removeFromCart(this)')
            .insertAfter($('input:checkbox[name=removefromcart]'));

        $('input:checkbox[name=removefromcart]').hide();
    });

    function shoppingcart_removeFromCart(source) {
        $(source).parent().find('input[name=removefromcart]').prop('checked', true);
        $('input[name=updatecart]').click();
    }
</script>