@using ima9ines.Nop.Plugin.Widgets.ProductAffiliateLink.Models
@using Nop.Web.Framework
@model ConfigurationModel
@{
    Layout = "";
}
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{
    <table class="adminContent">
        <tr>
            <td class="adminTitle">
                @Html.OverrideStoreCheckboxFor(model => model.ShowAddToCartSection_OverrideForStore, model => model.ShowAddToCartSection, Model.ActiveStoreScopeConfiguration)
                @Html.NopLabelFor(model => model.ShowAddToCartSection)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.ShowAddToCartSection)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            </td>
        </tr>
    </table>
}