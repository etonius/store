@using ima9ines.Nop.Plugin.Widgets.ProductAffiliateLink.Models
@model PublicInfoModel
@{
    string affiliateLink = Model.AffiliateLink;
    bool showAddToCartSection = Model.ShowAddToCartSection;
}
<input type="button" class="button-1 add-to-cart-button" value="@T("ima9ines.Nop.Plugin.Widgets.ProductAffiliateLink.BuyNow")" onclick="window.open('@affiliateLink', '_blank');" />
@if (!showAddToCartSection)
{
    <script type="text/javascript">
        $(document).ready(function () {
            var $productDetailsAddToCartSection = $('.product-essential .overview .add-to-cart');
            if ($productDetailsAddToCartSection.length > 0) {
                $productDetailsAddToCartSection.hide();
            }
        });
    </script>
}